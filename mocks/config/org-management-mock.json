{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Configuration for organization management mock endpoints error simulation",
  "mode": "normal",
  "latencyMs": 100,
  "errorSimulation": {
    "create": {
      "enabled": false,
      "errorType": "none",
      "statusCode": 500,
      "message": "Simulated server error"
    },
    "update": {
      "enabled": false,
      "errorType": "none",
      "statusCode": 500,
      "message": "Simulated server error"
    },
    "archive": {
      "enabled": false,
      "errorType": "none",
      "statusCode": 500,
      "message": "Simulated server error"
    },
    "restore": {
      "enabled": false,
      "errorType": "none",
      "statusCode": 500,
      "message": "Simulated server error"
    },
    "delete": {
      "enabled": false,
      "errorType": "none",
      "statusCode": 500,
      "message": "Simulated server error"
    },
    "reassignOwner": {
      "enabled": false,
      "errorType": "none",
      "statusCode": 500,
      "message": "Simulated server error"
    }
  },
  "availableErrorTypes": [
    "none",
    "duplicate_slug",
    "validation_error",
    "permission_error",
    "server_error",
    "timeout",
    "conflict",
    "not_found"
  ],
  "notes": [
    "Set 'enabled: true' and specify 'errorType' to simulate errors",
    "errorType options:",
    "  - duplicate_slug: Simulate slug conflict (409)",
    "  - validation_error: Simulate validation failure (400/422)",
    "  - permission_error: Simulate permission denied (403)",
    "  - server_error: Simulate internal server error (500)",
    "  - timeout: Simulate request timeout",
    "  - conflict: Simulate resource conflict (409)",
    "  - not_found: Simulate resource not found (404)",
    "latencyMs: Artificial delay in milliseconds (default: 100)"
  ]
}
